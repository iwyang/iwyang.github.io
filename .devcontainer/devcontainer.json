{
    "name": "Debian",
    "image": "mcr.microsoft.com/devcontainers/base:debian",
    
    // 1. 设置环境变量：锁定北京时间
    "remoteEnv": {
        "TZ": "Asia/Shanghai"
    },

    // 2. 安装功能：自动安装 Git LFS (修复推送大文件报错)
    "features": {
        "ghcr.io/devcontainers/features/git-lfs:1": {}
    },

    // 3. 核心设置：每次打开或唤醒 Codespace 时，自动拉取最新代码
    "postStartCommand": "git pull origin develop"
}